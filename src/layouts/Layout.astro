---
import WhatsappButton from "../components/shared/WhatsappButton.astro";
import { ViewTransitions } from 'astro:transitions';

interface Props
{
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content=" Conectividad Global asesoramos a nuestros clientes para llevar sus mensajes y conectar al pÃºblico
			objetivo, seleccionando los medios afines a su estrategia."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<slot />
		<WhatsappButton />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@100;200;300;400;500;600;700;800;900&display=swap');
	:root
	{
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	*
	{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html
	{
		font-family: 'Outfit', sans-serif;
		background: #FFF;
		scroll-behavior: smooth;
	}

	:global(html)
	{
		scroll-behavior: smooth;
	}

	@media (prefers-reduced-motion: reduce)
	{
		:global(html)
		{
			scroll-behavior: auto;
		}
	}

	p
	{
		text-align: justify;
	}
</style>
